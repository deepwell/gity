<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.markdeepwell.GitY</id>

  <name>GitY</name>
  <summary>View and search full Git history</summary>
  <description>
    <p>
      A simple and fast Git repository browser to view Git branches and commit diffs.
    </p>
    <p>Features:</p>
    <ul>
      <li>View all branches and commits for local Git repositories</li>
      <li>Search by commit message or Git SHA</li>
      <li>Coloured Git diff viewer</li>
      <li>Remembers recently opened Git repositories</li>
    </ul>
  </description>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <url type="homepage">https://github.com/deepwell/gity</url>
  <url type="bugtracker">https://github.com/deepwell/gity/issues</url>
  <url type="vcs-browser">https://github.com/deepwell/gity</url>

  <launchable type="desktop-id">com.markdeepwell.GitY.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/deepwell/gity/refs/heads/main/data/screenshots/repository-screen.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/deepwell/gity/refs/heads/main/data/screenshots/welcome-screen.png</image>
    </screenshot>
  </screenshots>
</component>
